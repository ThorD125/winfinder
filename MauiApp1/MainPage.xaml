<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">

    <ScrollView>
        <VerticalStackLayout x:Name="body">
            <HorizontalStackLayout x:Name="divSearch">
                <Entry
                    Text="inputbox Environment.GetFolderPath(Environment.SpecialFolder.UserProfile)" 
                    x:Name="inputBox"/>
                <Button 
                    Text="Search"
                    Clicked="showListview" />   
            </HorizontalStackLayout>

            <HorizontalStackLayout 
                x:Name="divLists"
                VerticalOptions="Fill"></HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
